<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>

         <main class="container">
            <h1>New Flair</h1>

             <form action="/topics/<%= topicId %>/flair/create" method="post">
                <div class="form-group">
                    <label for="name">Flair name</label>
                    <input type="text" class="form-control" name="name" aria-describedby="titleHelp" placeholder="Enter Name">
                </div>
                <div class="form-group">
                    <label for="color">Flair Color</label>
                    <input type="text" class="form-control" name="color" aria-describedby="titleHelp" placeholder="Choose Color (text-info, text-primary, text-danger)">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </main>

         <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>